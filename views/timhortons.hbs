<!DOCTYPE html>
<html>
<head>
  <title>Tim Hortons</title>
  <link rel="stylesheet" type="text/css" href="tim.css">
</head>
<body>
  
    <nav class="navbar">
    <div class="navbar__container">
        <a href="/" id="navbar__logo"><i class="fas fa-gem"></i> MONEY BANK </a>
        <div class="navbar__toggle" id="mobile-menu">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </div>
        <ul class="navbar__menu">
            <li class="navbar__item">
                <a href="/" class="navbar__links">Home</a>
            </li>
            <li class="navbar__item">
                <a href="/about" class="navbar__links">About</a>
            </li>
            <li class="navbar__item">
                <a href="/timhortons" class="navbar__links">Tim Hortons</a>
            </li>
            <li class="navbar__btn">
                <a href="/newcustomer" class="button">Login/Sign Up</a>
            </li>
        </ul>
    </div>
  </nav>
<h1>Tim Hortons</h1>
  <h2>Hot Beverages</h2>
  <div class="card-container" id="hot-beverages-container">
    {{#each hotBeverages}}
    <div class="card">
      <img src="{{image}}" alt="{{name}}">
      <h3>{{name}}</h3>
      <p>Price: {{price}}</p>
      <button class="add-to-cart-button" data-name="{{name}}" data-price="{{price}}">Add to Cart</button>
    </div>
    {{/each}}
  </div>

  <h2>Cold Beverages</h2>
  <div class="card-container" id="cold-beverages-container">
    {{#each coldBeverages}}
    <div class="card">
      <img src="{{image}}" alt="{{name}}">
      <h3>{{name}}</h3>
      <p>Price: {{price}}</p>
      <button class="add-to-cart-button" data-name="{{name}}" data-price="{{price}}">Add to Cart</button>
    </div>
    {{/each}}
  </div>

  <h2>Baked Goods</h2>
  <div class="card-container" id="baked-goods-container">
    {{#each bakedGoods}}
    <div class="card">
      <img src="{{image}}" alt="{{name}}">
      <h3>{{name}}</h3>
      <p>Price: {{price}}</p>
      <button class="add-to-cart-button" data-name="{{name}}" data-price="{{price}}">Add to Cart</button>
    </div>
    {{/each}}
  </div>


 <!-- Cart Section -->
  <div id="cart-container" style="display: none;">
  <span class="close-button">&times;</span>
  <h2>Cart</h2>

   <div class="cart-items-container"></div>
  <div><button id="pay-now-button">Pay Now</button></div>
<div id="total-container"></div>
</div>





  <!-- Include Handlebars library -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
  <script src="/client_script.js"></script>
  <script src="/scripts.js"></script>
</body>
</html>
