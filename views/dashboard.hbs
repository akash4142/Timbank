</head>
<body>
  <div class="container">
  <h1>Welcome to Bank Dashboard</h1>

<div class="functionality-links">
      <a href="#" class="show-section" data-section="delete">Delete Account</a>
      <a href="#" class="show-section" data-section="update">Update Account</a>
      <a href="#" class="show-section" data-section="withdraw">Withdrawal</a>
      <a href="#" class="show-section" data-section="transfer">Transfer</a>
      <a href="#" class="show-section" data-section="details">Account Details</a>
    </div>

    <div class="functionality-section" id="delete">
      <h2>Delete Account</h2>
     <form action="/delete" method="post">
      <label for="accountnum">Account Number:</label>
      <input type="text" id="accountnum" name="accountnum" required><br>
      <button type="submit">Delete Account</button>
    </form>
    </div>

    <div class="functionality-section" id="update">
      <h2>Update Account</h2>
      <form action="/update-account" method="post">
      <label for="accountnum">Account Number:</label>
      <input type="text" id="accountnum" name="accountnum" required><br>
      <!-- Add other fields that you want to update, e.g., name, password, etc. -->
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required><br>
      <!-- Add more fields for other account details -->

      <button type="submit">Update Account</button>
    </form>
    </div>
  
  <div class="functionality-section" id="withdraw">
      <h2>Withdrawal</h2>
      <form action="/withdraw" method="post">
      <label for="withdrawAmount">Amount:</label>
      <input type="number" id="withdrawAmount" name="amount" required><br>
      <label for="withdrawAccountNum">Account Number:</label>
      <input type="text" id="withdrawAccountNum" name="accountnum" required><br>
      <button type="submit">Withdraw</button>
    </form>
    </div>

    <div class="functionality-section" id="transfer">
      <h2>Transfer</h2>
      <form action="/transfer" method="post">
      <label for="transferAmount">Amount:</label>
      <input type="number" id="transferAmount" name="amount" required><br>
      <label for="senderAccountNum">Sender's Account Number:</label>
      <input type="text" id="senderAccountNum" name="senderAccount" required><br>
      <label for="recipientAccountNum">Recipient's Account Number:</label>
      <input type="text" id="recipientAccountNum" name="recipientAccount" required><br>
      <button type="submit">Transfer</button>
    </form>
    </div>

    <div class="functionality-section" id="details">
      <h2>Account Details</h2>
       <form action="/account-details" method="post">
      <label for="accountnum">Account Number:</label>
      <input type="text" id="accountnum" name="accountnum" required><br>
      <button type="submit">View Details</button>
    </form>
    </div>
  <!-- Add other functionality sections for "Transaction" and "Transfer Balance" here -->
  </div>
  <script src="/client_script.js"></script>
</body>
</html>
